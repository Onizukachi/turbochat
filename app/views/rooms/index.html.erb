<%= turbo_frame_tag :rooms do %>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
    <%= render @rooms %>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= form_with model: @new_room do |f| %>
    <div class='mt-6'>
      <%= f.submit "Create Room", class: "flex w-32 justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 cursor-pointer focus-visible:outline-indigo-600" %>
    </div> 
  <% end %>
<% end %>

<%= turbo_stream_from :rooms %>