<% if resource.errors.any? %>
  <div class="text-sm text-red-800 dark:text-red-400 text-center">
    <div id="error_explanation" data-turbo-cache="false" class="p-4 mb-4 inline-block rounded-lg bg-red-50 dark:bg-gray-800 text-center" role="alert">
      <ul class="list-disc pl-4 text-left"> 
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
